@using liftoff_jamey_1.Models;
@model List<BookClub>

@{ViewData["Title"] = "BookClub";   }


<div class="container p-3">
	<div class="row p-4">
		<div class="col-6">
            <h2 class="text-primary"><img src="https://community.o2.co.uk/t5/image/serverpage/image-id/48007i45B67D2A78C035A9/image-size/thumb/crop-image/true?v=v2&px=150" alt="bookworm" />
			Book Clubs List</h2>
		</div>
		<div class="col-6 text-end">
            <a asp-controller="BookClub" asp-action="Create" class="btn btn-primary">
				+ Create New Book Club!
			</a>
		</div>
	</div>
</div>

@if(Model.Count == 0)
{
	<p>No BookClubs yet</p>
}
else
{
	
<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>Club Name</th>
			<th>Location</th>
			<th>Creator</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td><a asp-asp-controller="BookClub" asp-action="Detail" asp-route-id="@obj.Id">@obj.ClubName</a></td>
				<td>@obj.Location</td>
				<td>@obj.CreatorId</td>
			</tr>
		}
	</tbody>
	
</table>
}