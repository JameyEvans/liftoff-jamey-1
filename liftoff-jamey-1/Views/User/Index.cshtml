@using liftoff_jamey_1.Models;
@model List<UserBookClub>

@{ViewData["Title"] = "Index"; }

<div class="text-center">
    <h2 class="display-4">Your Book Clubs</h2>
</div>
@if (Model.Count == 0)
{
    <p>Your not in any clubs yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>BookClub</th>
            <th>Location</th>
        </tr>
        @foreach (var userBookClub in Model)
        {
            <tr>
                <td><a asp-controller="User" asp-action="Index" asp-route-id="@userBookClub.BookClubId">@userBookClub.BookClub.ClubName</a></td>
                <td>@userBookClub.BookClub.Location.</td>
            </tr>
        }
    </table>
}
    </div>