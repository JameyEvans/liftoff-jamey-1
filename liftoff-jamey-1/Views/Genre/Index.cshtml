@{
}

@model IEnumerable<Genre>

<div class="container p-3">
	<div class="row p-4">
		<div class="col-6">
			<h2 class="text-primary">Genre List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Genre" asp-action="Add" class="btn btn-primary">
				Add New Genre
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>Id</th>
			<th>Genre</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var genre in Model)
		{
			<tr>
				<td>@genre.Id</td>
				<td><a asp-controller="Genre" asp-action="Detail" asp-route-id="@genre.Id">@genre.GenreName</a></td>
			</tr>
		}
	</tbody>

</table>
