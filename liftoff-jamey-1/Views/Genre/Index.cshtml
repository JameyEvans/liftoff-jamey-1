@{
}

@using liftoff_jamey_1.Models
@model IEnumerable<Genre>

<div class="container p-3">
	<div class="row p-4">
		<div class="col-6">
			<h2 class="text-primary">Genre List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Genre" asp-action="Add" class="btn btn-primary">
				Add New Genre
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>Genre</th>
			<th>BookClubs</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>@obj.GenreName</td>
				<td>@obj.BookClubs</td>
			</tr>
		}
	</tbody>

</table>
