@{
}

@model List<liftoff_jamey_1.Models.Genre>

<h1>All Genres</h1>

@if (Model.Count == 0)
{
    <p>No genres yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Genre Name</th>
        </tr>
        @foreach (Genre genre in Model)
        {
            <tr>
                <td>@genre.Id</td>
                <td><a asp-controller="Genre" asp-action="Detail" asp-route-id="@genre.Id">@genre.GenreName</a></td>
            </tr>
        }
    </table>
}