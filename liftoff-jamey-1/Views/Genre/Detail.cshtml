@{
}

@model liftoff_jamey_1.Models.Genre

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Genre: @Model.GenreName</h2>
                    @if (Model.BookClubs.ToList().Count == 0)
                    {
                        <p class="card-text">No BookClubs with the given genre</p>
                    }
                    else
                    {
                        <p class="card-text">BookClubs tagged with @Model.GenreName</p>

                        <ul>
                            @foreach (var club in Model.BookClubs)
                            {
                                <li class="card-text">@club.ClubName</li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



