@{
}

@model Genre

<form method="post" asp-controller="Genre" asp-action="Add">
    <div class="boarder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create a Genre</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for=GenreName>Genre Name</label>
            <input asp-for=GenreName class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Genre" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to genre list
        </a>
    </div>
</form>
