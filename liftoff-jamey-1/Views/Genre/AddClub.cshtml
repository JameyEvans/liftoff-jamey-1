@{
}

@using liftoff_jamey_1.ViewModels
@model AddGenreViewModel

<form method="post" asp-action="AddClub">
    <input type="hidden" value="@Model.BookClub" />
    <div class="boarder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add a Genre to Bookclub</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="GenreId">Genre</label>
            <select asp-for="GenreId" asp-items="Model.Genres"></select>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>

        <a asp-controller="BookClub" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to club list
        </a>
    </div>
</form>
